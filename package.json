{
    "name": "radical-service",
    "version": "0.0.1",
    "description": "Radical service",
    "scripts": {
        "start:dev": "NODE_ENV=development nodemon bootstrap/api.js | bunyan",
        "start": "NODE_ENV=production nodemon bootstrap/api.js | bunyan",
        "test": "NODE_ENV=development mocha --full-trace --bail --check-leaks --reporter list --timeout 80000 --recursive --exit test --reporter=list --reporter-options output=reports/TESTS-xunit.xml",
        "migrate:create": "db-migrate create $file --config config/database.json",
        "migrate:up": "db-migrate up --config config/database.json",
        "migrate:down": "db-migrate down --config config/database.json",
        "migrate:reset": "db-migrate reset --config config/database.json",
        "heroku-postbuild": "npm run build"
    },
    "author": "Sangeeth Kumar S <cbe.sangeeth@gmail.com>",
    "license": "ISC",
    "devDependencies": {
        "chai": "^4.1.2",
        "db-migrate": "^0.11.1",
        "db-migrate-pg": "^0.4.0",
        "mocha": "^5.2.0",
        "nodemon": "^1.18.3",
        "supertest": "^3.1.0"
    },
    "dependencies": {
        "bluebird": "^3.5.1",
        "body-parser": "^1.18.3",
        "bunyan": "^1.8.12",
        "express": "^4.16.3",
        "express-request-id": "^1.4.0",
        "knex": "^0.15.2",
        "lodash": "^4.17.10",
        "moment": "^2.22.2",
        "pg": "^7.4.3",
        "pg-native": "^3.0.0"
    }
}
